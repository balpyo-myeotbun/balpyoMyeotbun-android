<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BalPyo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlActivated">@color/primary</item> <!-- 커서 색상 -->
        <item name="android:windowLightStatusBar">true</item>   <!-- 상태바 아이콘(true: 검정 / false: 흰색) -->
        <item name="android:navigationBarColor">@android:color/transparent</item> <!-- 하단 탐색바 배경 -->
    </style>

    <style name="Theme.BalPyo" parent="Base.Theme.BalPyo" />

    <style name="AppTheme.NumberPicker" parent="Base.Theme.BalPyo">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
</resources>