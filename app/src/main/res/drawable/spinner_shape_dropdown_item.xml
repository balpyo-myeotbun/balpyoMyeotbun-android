        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp"/>
                    <size android:height="40dp"/>
                    <solid android:color="@color/gray3"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>